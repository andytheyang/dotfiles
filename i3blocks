# i3blocks config - andy
#
# SIGNALS && pkill -RTMIN+1 i3blocks
# 10 = volume button

separator_block_width=40
markup=none
command=~/.i3blocks/$BLOCK_NAME		# default command (script mode)

[temp]
# label= 
# command=sensors | grep Package | awk '{print $4}' | cut -d "+" -f2
interval=3

[disk]
label= 
command=df -h | grep /dev/nvme0n1p5 | awk '{print $5 " " $4}'
interval=120

[wifi]
label= 
interval=10

[volume]
label=vol 
interval=once
signal=10

[battery]
# battery changes icon based on value
# label= 
interval=60

[date]
label= 
command=date '+%b %d %l:%M:%S %P'
interval=1


